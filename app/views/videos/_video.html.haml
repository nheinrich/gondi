%li.video{ :id => "video_"+video.id.to_s }
  %img
  %span.duration= video.duration
  .info
    %h3= video.title
    .athletes
      - athletes = ['Jonas Michilot', 'Will Tuddenham', 'Chris Bradshaw', 'Desiree Melancon', 'Laura Hadar', 'Harrison Gordon', 'Zak Hale', 'Lance Hakker', 'Mike Hakker', 'Will Bateman']
      %ul
        %li
          %h4 Starring:
        - athletes.each do |star|
          %li= link_to star + ', ', '#'
    %ul.meta
      %li Views: TBD
      %li Saves: TBD
      %li= "#{distance_of_time_in_words_to_now video.created_at} ago"
  %ul.options
    %li.watch= link_to 'Watch', '/watch/'+video.title
    %li.save= link_to 'Save', '/save/3'
